{
  "name": "green pi",
  "version": "0.1.0",
  "description": "Beautiful math wherever you want",
  "permissions": [
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ],
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "images/logo16.png",
    "32": "images/logo32.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  },
  "web_accessible_resources": [
    "fonts/*"
  ]
}
